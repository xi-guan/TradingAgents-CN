# ============================================================================
# TradingAgents-CN V2 环境配置示例
# 数据库架构：TimescaleDB + Qdrant + Redis
# ============================================================================

# ============================================================================
# 基础配置
# ============================================================================
DEBUG=True
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=*
ALLOWED_HOSTS=*

# ============================================================================
# PostgreSQL/TimescaleDB 配置
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=tradingagents
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=tradingagents
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_MIN_CONNECTIONS=10

# ============================================================================
# Qdrant 向量数据库配置
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_GRPC_PORT=6334

# ============================================================================
# Redis 配置
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=True

# ============================================================================
# JWT 配置
# ============================================================================
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# 日志配置
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/tradingagents.log

# ============================================================================
# 缓存配置
# ============================================================================
CACHE_TTL=3600
SCREENING_CACHE_TTL=1800

# ============================================================================
# 数据源配置
# ============================================================================
# Tushare
TUSHARE_TOKEN=your_tushare_token_here
TUSHARE_ENABLED=True
TUSHARE_TIER=standard

# AKShare
AKSHARE_UNIFIED_ENABLED=True

# BaoStock
BAOSTOCK_UNIFIED_ENABLED=True

# ============================================================================
# 外部 API 配置
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_API_KEY=...

# ============================================================================
# 代理配置
# ============================================================================
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,eastmoney.com

# ============================================================================
# 时区
# ============================================================================
TIMEZONE=Asia/Shanghai
